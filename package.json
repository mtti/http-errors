{
  "name": "@mtti/http-errors",
  "version": "2.0.0",
  "description": "Throwable HTTP error classes",
  "repository": "github:mtti/http-errors",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "lib/index.js",
  "scripts": {
    "start": "node lib/index.js",
    "build": "tsc",
    "jest": "jest --config ./jest.config.json",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "setup": "npm install",
    "test": "npm run lint && npm run jest",
    "test:docker": "docker build -f ./Dockerfile-test -t ts-test . && docker run --rm -it ts-test",
    "tsc": "tsc",
    "watch": "chokidar --initial -c \"npm run build\" \"src/**/*.ts\"",
    "generate": "node scripts/generate.js"
  },
  "files": [
    "lib",
    "!lib/**/*.test.*"
  ],
  "devDependencies": {
    "@mtti/eslint-config-typescript": "3.0.0",
    "@types/jest": "27.0.2",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "chokidar-cli": "3.0.0",
    "eslint": "8.1.0",
    "eslint-plugin-import": "2.25.2",
    "jest": "27.3.1",
    "nunjucks": "3.2.3",
    "pascal-case": "3.1.2",
    "ts-jest": "27.0.7",
    "typescript": "4.4.4"
  },
  "dependencies": {
    "http-status-codes": "^2.1.4"
  }
}
